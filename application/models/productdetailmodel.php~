<?php if ( ! defined('BASEPATH')) exit('No direct script access allowed');

class ProductDetailModel extends CI_Controller {

	function getAll(){
		$query = $this->db->get('ProductDetail');
		return $query->result();	
	}
	
	function addHotel($ProductDetail){
		$this ->db->insert('ProductDetail',$ProductDetail);	
	}

	function updateHotel($id,$ProductDetail){
		$this->db->where('ID',$id);
		$this ->db->update('ProductDetail',$ProductDetail);	
	}

	function deleteHotel($id){
		$this->db->where('ID',$id);
		$this->db->delete('ProductDetail');
	}

}

